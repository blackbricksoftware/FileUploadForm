<?xml version="1.0" encoding="utf-8"?>
<extension type="component" version="3.1.0" method="upgrade">
    <name>File Upload Form</name>
    <version>0.0.1</version>
    <description>COM_FILEUPLOADFORM_XML_DESCRIPTION</description>
	<license>http://www.gnu.org/licenses/gpl-2.0.html GNU/GPL</license>
    <author>Black Brick Software LLC</author>
    <authorEmail>david@blackbricksoftware.com</authorEmail>
    <authorUrl>http://blackbricksoftware.com</authorUrl>
    <copyright>Copyright Â© 2013-2014 Black Brick Software LLC. All rights reserved.</copyright>
    <creationDate>7 November 2013</creationDate>
    <install folder="administrator/components/com_fileuploadform">
        <sql>
            <file driver="mysql" charset="utf8">sql/install.mysql.utf8.sql</file>
        </sql>
    </install>
    <uninstall folder="administrator/components/com_fileuploadform">
        <sql>
            <file driver="mysql" charset="utf8">sql/uninstall.mysql.utf8.sql</file>
        </sql>
    </uninstall>
    <files folder="components/com_fileuploadform">
		<folder>controllers</folder>
		<folder>models</folder>
		<folder>uploads</folder>
		<folder>views</folder>
        <filename>controller.php</filename>
        <filename>fileuploadform.php</filename>
        <filename>htaccess.txt</filename>
        <filename>index.html</filename>
    </files>
    <media folder="media/com_fileuploadform" destination="com_fileuploadform">
		<folder>css</folder>
		<folder>images</folder>
		<folder>js</folder>
		<folder>libraries</folder>
		<filename>index.html</filename>
	</media>
    <administration>
        <menu>COM_FILEUPLOADFORM</menu>
        <files folder="administrator/components/com_fileuploadform">
			<folder>controllers</folder>
			<folder>helpers</folder>
			<folder>models</folder>
			<folder>sql</folder>
			<folder>tables</folder>
			<folder>views</folder>
			<filename>access.xml</filename>
			<filename>config.xml</filename>
			<filename>controller.php</filename>
			<filename>fileuploadform.php</filename>
			<filename>index.html</filename>
			<filename>LICENSE.GPL</filename>
        </files>
        <languages folder="administrator/language">
			<language tag="en-GB">en-GB/en-GB.com_fileuploadform.sys.ini</language>
			<language tag="en-GB">en-GB/en-GB.com_fileuploadform.ini</language>
		</languages>
	</administration>
</extension>
